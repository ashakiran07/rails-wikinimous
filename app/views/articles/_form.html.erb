<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control', rows: 10, data: { editor: 'markdown' } %>
        </div>

        <div class="actions">
          <%= f.submit class: 'btn btn-primary my-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
